{
   "manifest_version": 3,
   "name": "Oolong Image Viewer",
   "short_name": "oolong image viewer",
   "description": "A simple image viewer supporting drag and drop of the image.",
   "version": "1.1.0",
   "icons": {
      "128": "icons/icon128.png",
      "48": "icons/icon48.png",
      "16": "icons/icon16.png"
   },
   "content_scripts": [{
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["loader.js"],
      "run_at": "document_start",
      "all_frames": false
   }],
   "web_accessible_resources": [{
      "resources": [
         "image-viewer/bootstrap/*",
         "image-viewer/css/*",
         "image-viewer/*"
      ],
      "matches": ["<all_urls>"]
   }],
   "permissions": []
}
